{
  "name": "ppinot-visual",
  "version": "0.5.0",
  "description": "Visual PPINOT Modeler with BPMN, RASCI and RALPH integration",
  "main": "app/app.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "test": "npx jest --config jest.config.tfg.js --passWithNoTests --verbose --no-cache",
    "test:unit": "npx jest --config jest.config.tfg.js tests/8.1-unitarias --verbose --no-cache",
    "test:integration": "npx jest --config jest.config.tfg.js tests/8.2-integracion --verbose --no-cache",
    "test:acceptance": "npx jest --config jest.config.tfg.js tests/8.3-aceptacion --verbose --no-cache",
    "test:ui": "npx jest --config jest.config.tfg.js tests/8.3-ui-e2e --verbose --no-cache",
    "test:all": "npm run test && npm run test:e2e",
    "test:coverage": "npx jest --config jest.config.tfg.js --coverage",
    "clean:reports": "node scripts/clean-reports.js",
    "generate:report": "node scripts/generate-final-tfg-report.js",
    "lint": "eslint app/ tests/ --ext .js",
    "serve": "http-server . -p 3000 -c-1"
  },
  "keywords": [
    "bpmn",
    "ppinot",
    "ralph",
    "rasci",
    "process-modeling",
    "visual-modeling"
  ],
  "author": "TFG Student",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.8.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "bpmn-js": "^17.0.2",
    "bpmn-js-properties-panel": "^5.0.0",
    "diagram-js": "^14.0.0",
    "inherits-browser": "^0.1.0",
    "jquery": "^3.7.1",
    "min-dash": "^4.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/**/*.test.js",
      "!**/node_modules/**"
    ]
  }
}
